<link rel="stylesheet" type="text/css" href="<%=assetPath('css/home.css')%>">
<script src="<%=assetPath('js/home.js')%>"></script>
<% if(locals.user) { %>
<div id="posts-form-container">
    <form id="post-submit-form" action="/posts/create" method="post">
        <textarea name="content" id="post-content" placeholder="Enter Text" cols="30" rows="3"></textarea>
        <button type="submit">Post</button>
    </form>
</div> 

<% } %>

<div id="posts-container">
    <ul id="posts">
        <% for( post of posts) { %>
             <%- include('_posts') %>
        <% } %>
    </ul>
            
</div>


<div id="friends-list">
    <h2>Friends</h2>
    <ul>
        <% if (locals.user) { %>
        <% for(let profileUser of users) { %>
            <li>
                <a href="/users/profile/<%= profileUser.id %>"><%= profileUser.name %></a>
            </li>
        <%}%>
        <%}%>
    </ul>
</div>

<% if(locals.user) { %>
    <%- include('_chatbox') %>
<% } %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
<script src="<%=assetPath('js/chatting_browser.js')%>"></script>

<% if(locals.user) { %> 
<script>
    new chatBox('<%= locals.user.email %>','<%= env_name %>');
</script>
<% } %>